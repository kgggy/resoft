					bannerTextWrap.style.left = "0";
				}
			}
		);

	var moveBtn = document.getElementsByClassName('move')[0];
	moveBtn.addEventListener('click', function() {
		var offsetY = window.pageYOffset;
		if(offsetY !== 0) {
			window.scrollTo({
				top: 0,
				behavior: 'smooth'
		})
	}
