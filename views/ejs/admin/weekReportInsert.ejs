<div class="col-xs-6">
    <!-- HTML5 Inputs -->
    <div class="card mb-4">
       
        <h5 class="card-header">주간업무일지 작성</h5>

        <div class="card-body">
            <form id="eventEnrollForm" name="eventEnrollForm" role="form" method="post">
                <div class="mb-3 row">
                    <label for="html5-text-input" class="col-md-2 col-form-label">업무 내용</label>
                    <div class="col-md-9" id="reportInsert">
                        <input class="form-control" type="text" value="" id="report" name="report" /><br>
                    </div>
                    <button style="max-width: 100px; max-height: 40px;"class="col-md-1 btn btn-info" type="button" onclick="AddReportLine()">+</button>
                </div>
                <div class="mb-3 row">
                    <label for="html5-text-input" class="col-md-2 col-form-label">다음주 업무 계획</label>
                    <div class="col-md-10">
                        <input class="form-control" id="nextPlan" type="text" name="nextPlan" value="">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="html5-text-input" class="col-md-2 col-form-label">비고 (건의사항)</label>
                    <div class="col-md-10">
                        <input class="form-control" type="text" value="" id="note" name="note" />
                    </div>
                </div>
                <div class="demo-inline-spacing">
                    <button type="button" class="btn btn-primary" id="enroll_btn">등록</button>
                    <button type="button" class="btn btn-danger" onclick="history.go(-1)">취소</button>
                </div>
            </form>
        </div>
    </div>
    <script type="text/javascript">
    function AddReportLine(){
    // textarea 추가
    var nReport = document.createElement("input");
    var sName = 'report';
    var sId = 'report';
    nReport.setAttribute("name", sName);
    nReport.setAttribute("id", sId);
    nReport.setAttribute("class", "form-control");
    document.getElementById("reportInsert").appendChild(nReport);
 
    // 줄바꿈
    var tagBr = document.createElement("br");
    document.getElementById("reportInsert").appendChild(tagBr);
    }
    
    function DeleteCareerLine(){
        var cnt = $('.report').length;
    
        // textarea가 2개 이상인 경우 마지막 textarea를 삭제
        if (cnt > 1) {
            var sId = 'report' + (cnt-1);
            $('#'+sId).remove();
        }else {
            console.log('textarea count : 1');
        }
    }
    $("#enroll_btn").click(function () {
        if (confirm("등록하시겠습니까?") == true) {
            $("#eventEnrollForm").attr("action", "/admin/weekReportInsert");
            $("#eventEnrollForm").submit();
        } else {
            return;
        }
    });
    </script>