			$(bannerTextWrap).css({ 'left': 'calc(50% - ' + halfWidth + 'px)' });
		}

	window.addEventListener('resize', function() {
		if (window.matchMedia("screen and (max-width: 940px)").matches) {
				$(bannerTextWrap).css({ 'left': 'calc(50% - ' + halfWidth + 'px)' });
